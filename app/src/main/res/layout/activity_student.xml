<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:text="Student Details"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

<ScrollView
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_person_black_24dp"
            android:background="#F8919090"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:id="@+id/image_student"/>

        <EditText
            android:layout_marginTop="30dp"
        android:id="@+id/student_name"
        android:hint="Name"
            android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="8dp"
        android:id="@+id/student_number"
        android:hint="Number"
            android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress"
            android:id="@+id/student_email"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/sclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></Spinner>

        <EditText
            android:layout_marginTop="8dp"
        android:id="@+id/student_branch"
        android:hint="Branch"
            android:inputType="text"
            android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="8dp"
        android:id="@+id/student_roll_no"
        android:hint="Roll No"
            android:inputType="text"
            android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="8dp"
        android:id="@+id/student_id"
        android:hint="Student Id"
            android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="8dp"
        android:id="@+id/student_year"
        android:hint="Year"
            android:inputType="number"
            android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/student_password"
            android:hint="Password"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
        <Button
            android:background="@drawable/submit"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_marginRight="2.5dp"
            android:layout_height="wrap_content"
            android:text="Add"/>
            <Button
                android:background="@drawable/submit"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/remove"
                android:layout_width="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_height="wrap_content"
                android:text="Remove"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>

</LinearLayout>